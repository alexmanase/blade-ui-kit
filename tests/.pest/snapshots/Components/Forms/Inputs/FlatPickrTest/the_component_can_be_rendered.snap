<input
    x-data="{
        picker: null,
        initPicker() {
            if (this.picker) return;
            
            this.picker = flatpickr(this.$root, {&quot;dateFormat&quot;:&quot;Y-m-d H:i&quot;,&quot;altInput&quot;:true,&quot;enableTime&quot;:true});
        }
    }"
    x-init="$nextTick(() => { initPicker() })"
    name="birthday"
    type="text"
    id="birthday"
    placeholder="Y-m-d H:i"
        
/>
